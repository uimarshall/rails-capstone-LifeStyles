<%= form_for(@article) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= f.select :category_id, Category.all.map{|cat|[cat.name,cat.id]} %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
